<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movie_fragment">

    <fragment
        android:id="@+id/movie_fragment"
        android:name="edu.iesam.dam2.features.movies.presentation.MoviesFragment"
        tools:layout="@layout/fragment_superhero_list">

        <action
            android:id="@+id/action_from_movie_to_movie_detail"
            app:destination="@id/superhero_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/superhero_detail_fragment"
        android:name="edu.iesam.dam2.features.movies.presentation.MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail" >

        <argument
            android:name="movieId"
            app:argType="string"
            app:nullable="false" />

    </fragment>

</navigation>